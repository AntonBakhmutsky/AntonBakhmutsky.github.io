extends ../layouts/map/layout.pug

append variables
  -
    breadCrumbsList = [
      {
        url: '/',
        txt: 'Главная'
      }
    ]

block title
  | Golden Dragon

block content
  section.contacts
    .container
      h2.section-title.opacity-animation Контакты
      .contacts__container
        .contacts__switcher
          each el, index in contactsList
            button.contacts__switcher-btn(data-id=index class=index === 0 ? 'active' : '') #{el}
        .contacts__content
          .contacts__content-item.active(data-id='0')
            .contacts__info
              .contacts__info-name Центральный офис продаж
              .contacts__info-address Ленинградская область, пгт. Красный Бор, ул. Промышленная д.3
              .contacts__info-container
                .contacts__info-time
                  img(src=require('@/assets/img/contacts/clock.svg') alt="")
                  span пн-пт: 09:00-18:00
                a.contacts__info-mail(href="mailto:bus@sotrans.ru")
                  img(src=require('@/assets/img/contacts/mail.svg') alt="")
                  span bus@sotrans.ru
            .contacts__list.swiper
              .swiper-wrapper
                each el in contactsItems
                  .swiper-slide
                    +contact-card(el)
              .swiper-button-prev
                img(src=require('@/assets/img/contacts/vector-left.svg') alt="")
              .swiper-button-next
                img(src=require('@/assets/img/contacts/vector-right.svg') alt="")
            .contacts__list-mobile
              each el in contactsItems
                .swiper-slide
                  +contact-card(el)
            .contacts__map#mapRedForest
          .contacts__content-item(data-id='5')
            .contacts__map#mapRedForest5
          .contacts__content-item(data-id='1')
            .contacts__map#mapRedForest1
          .contacts__content-item(data-id='2')
            .contacts__map#mapRedForest2
          .contacts__content-item(data-id='3')
            .contacts__map#mapRedForest3
          .contacts__content-item(data-id='4')
            .contacts__map#mapRedForest4

