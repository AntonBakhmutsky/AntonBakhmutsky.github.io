extends ../layouts/other/layout.pug

append variables
  -
    breadCrumbsList = [
      {
        url: '/',
        txt: 'Главная'
      }
    ]

block title
  | Golden Dragon

block content
  section.contacts
    .container
      h2.section-title.opacity-animation Контакты
      .contacts__container
        .contacts__switcher
          each el, index in contactsList
            button.contacts__switcher-btn(data-id=index) #{el}
        .contacts__content
          .contacts__content-item(data-id='0')

          .contacts__content-item(data-id='1')
          .contacts__content-item(data-id='2')
          .contacts__content-item(data-id='3')
          .contacts__content-item(data-id='4')
          .contacts__content-item(data-id='5')
          .contacts__content-item(data-id='6')




