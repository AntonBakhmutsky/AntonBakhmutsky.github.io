section.pluses
  .pluses__top
    .pluses__top-bg
      img(src=require('@/assets/img/polupritsepy/pluses.png') alt="")
      img(src=require('@/assets/img/polupritsepy/pluses-mob.jpg') alt="")
    .container
      .pluses__top-content
        h2.section-title.section-title_blue #[span 02] Преимущества
        ul.pluses__top-list
          each el in plusesTop
            li !{el}
  .pluses__bottom
    .container
      ul.pluses__bottom-list
        each el in plusesBottom
          li.pluses__bottom-item
            .pluses__bottom-item-icon
              img(src=el.icon alt="")
            .pluses__bottom-item-desc
              strong #{el.title}
              span #{el.txt}
      .pluses__bottom-image
        img(src=require('@/assets/img/polupritsepy/pluses/pluses.jpg') alt="")
