extends ../layouts/main/layout.pug

block title
  | TRUCKS.POINT

block content
  section.counterparties
    a.close-btn(href='index.html')
      | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/close.svg')}
    .counterparties-container
      .counterparties-header
        .counterparties-header__title
          | Список контрагентов (Отображены
          strong  1-30
          |  из
          strong  474
          |  )
        .counterparties-header_events
          .counterparties-header_events_count
            span Выводить на странице:
            button 30
            button 50
            button 100
            button 200
          .counterparties-header_events_btns
            +button('обновить', 'gray-dark', 'trucks/reload.svg')
            +button(null , 'gray-dark', 'trucks/download.svg')

      .counterparties-titles
        .counterparties-titles-q
          span #
        .counterparties-titles-id
          span ID
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/mask.svg')}
        .counterparties-titles-name
          span Название
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/mask.svg')}
        .counterparties-titles-inn
          span ИНН
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/mask.svg')}
        .counterparties-titles-kpp
          span КПП
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/mask.svg')}
        .counterparties-titles-email
          span Эл почта
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/mask.svg')}
        .counterparties-titles-access
          span Открыт доступ
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/mask.svg')}

      .counterparties-sort
        .counterparties-sort-q
        .counterparties-sort-id
          input(type="text" placeholder="ID").counterparties-sort__text
        .counterparties-sort-name
          input(type="text" placeholder="Название").counterparties-sort__text
        .counterparties-sort-inn
          input(type="text" placeholder="ИНН").counterparties-sort__text
        .counterparties-sort-kpp
          input(type="text" placeholder="КПП").counterparties-sort__text
        .counterparties-sort-email
          input(type="text" placeholder="Эл. почта").counterparties-sort__text
        .counterparties-sort-access
          select.counterparties-sort__text
            option(value='') Показать все

      .counterparties-list
        a.counterparties-list-item(href='one-contractor.html')
          .counterparties-list-item-q
            span 1
          .counterparties-list-item-id
            span 42537370
          .counterparties-list-item-name
            span АГРОСОЮЗ ООО
          .counterparties-list-item-inn
            span 1832097892
          .counterparties-list-item-kpp
            span 183201001
          .counterparties-list-item-email
            span emailuser@gmail.com
          .counterparties-list-item-access
            input(type='checkbox').check-mark



  include ../components/global/pagination
