          span #
        .counterparty-points-titles-id
          span ID
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/mask.svg')}
        .counterparty-points-titles-name
          span Название
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/mask.svg')}
        .counterparty-points-titles-address
          span Адрес
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/mask.svg')}
        .counterparty-points-titles-using-date
          span Дата последнего использования
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/mask.svg')}

      .counterparty-points-sort
        .counterparty-points-sort-q
        .counterparty-points-sort-id
          input(type="text" placeholder="ID").counterparty-points-sort__text
        .counterparty-points-sort-name
          input(type="text" placeholder="Название").counterparty-points-sort__text
        .counterparty-points-sort-address
        .counterparty-points-sort-using-date
          select
            option(value="") Равно
          .counterparty-points-sort-date
            | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/trucks/date.svg')}

