extends ../layouts/main/layout-map

block title
  | TRUCKS.POINT

block content
  section.one-car.page
    .one-car-header
      .one-car-header-title
        a(href='trucks.html')
          | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/one-application-creating/close.svg')}
        h4 Машина В855АТ147
      button
        | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/one-car/printer.svg')}
    .one-car-content
      .one-car-content-title
        span Информация об автомобиле
      .one-car-content-item
        .one-car-content-item__title
          span Госномер автомобиля
          span.text-red *
        input(type='text' name='registration-number' required='').one-car-content-item__input
      .one-car-content-item
        .one-car-content-item__title
          span Тип автомобиля
          span.text-red *
        .one-car-content-item__input-sel
          +select('Выберите тип автомобиля', 'Тягач')
      .one-car-content-item
        .one-car-content-item__title
          span Марка
          span.text-red *
        .one-car-content-item__input-sel
          +select('Выберите марку', 'Mercedes-Benz')
      .one-car-content-item
        span.one-car-content-item__title Логист
        .one-car-content-item__input-sel
          +select('Выберите логиста', 'Томсон Артём Александрович')
      .one-car-content-item
        span.one-car-content-item__title Трекер
        .one-car-content-item__input-sel
          +select('Выберите трекер', 'sotr_22486793')
      .one-car-content-item
        span.one-car-content-item__title Колонна
        .one-car-content-item__input-sel
          +select('Выберите колонну', 'Андреев Евгений')
      .one-car-content-item.one-car-content-item-docks
        span.one-car-content-item__title Cсылки на документы
        textarea(name='docks').one-car-content-item__input
      .one-car-content-item
        span.one-car-content-item__title Вид топлива
        input(name='fuel' type='text').one-car-content-item__input
      .one-car-content-item
        span.one-car-content-item__title Объем бака №1
        input(name='volume1' type='text').one-car-content-item__input
      .one-car-content-item
        span.one-car-content-item__title Объем бака №2
        input(name='volume2' type='text').one-car-content-item__input
      .one-car-content-item
        span.one-car-content-item__title Расход топлива, л/100км
        input(name='Fuel consumption' type='text').one-car-content-item__input
      .one-car-content-item
        span.one-car-content-item__title Минимальное кол-во топлива в баке
        input(name='Minimum fuel' type='text').one-car-content-item__input


