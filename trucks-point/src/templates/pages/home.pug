extends ../layouts/main/layout.pug

block title
  | TRUCKS.POINT

block content
  section.home
    button.home__btn-close
      | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/home/close.svg')}

    .home-user
      .home-user-block
        .home-user-block_info
          img.home-user-block_info__avatar(src=require('@/assets/img/home/avatar.svg') alt="avatar" loading='lazy')
          h2.home-user-block_info__name Константинопольский Константин
        span.home-user-block-email webmaster@sortans.ru

      .home-toggle
        button.home-toggle-organization#organization-btn Организация
        button.home-toggle-settings#settings-btn Настройка полей

    form
        .home-organization#organization-page
          .home-organization_left
            h3.home-organization_left_label Данные организации
            .home-organization_left__form-container
              label(for="INN") ИНН/КПП
              input(type="text" id="INN" name="ИНН/КПП" placeholder="Some Text")

              label(for="OGRN") ОГРН
              input(type="text" id="OGRN" name="ОГРН" placeholder="Some Text")

              label(for="bank") БАНК
              input(type="text" id="bank" name="банк" placeholder="...")

              label(for="ks") к/с
              input(type="text" id="ks" name="к/с" placeholder="...")

              label(for="rs") р/c
              input(type="text" id="rs" name="р/c" placeholder="...")

              label(for="nameCompany") Название Компании
              input(type="text" id="nameCompany" name="Название Компании" placeholder="Some Text")

              label(for="email") Эл. почта
              input(type="email" id="email" name="email" placeholder="Some Text")

              label(for="phone") Телефон
              input(type="tel" id="phone" name="Телефон" placeholder="...")

              label(for="site") Сайт
              input(type="text" id="site" name="site" placeholder="...")

              label(for="adress") Адрес
              input(type="text" id="adress" name="Адрес" placeholder="Начните вводить адрес")

              label(for="time") Часовой пояс
              select(id="time" name="time")
                option(value="") (UTC+03:00) Москва, стандартное время (GMT+3)

              label(for="control") Контроль геозон в мобильном приложении
              input(type="checkbox" id="control" name="Контроль геозон в мобильном приложении")

              label(for="period") Закрытый период
              input(type="checkbox" id="period" name="Закрытый период")

              label(for="period-date") Дата закрытого периода (день месяца, от 1 до 28)
              input(type='number' id='period-date' min='1' max='28' name='Дата закрытого периода' placeholder='Some Text')

              label(for="critical-overrun") Критический перепробег (в км.)
              input(type="text" id="critical-overrun" name="Критический перепробег" placeholder='Some Text')

              label(for="geofence-time") Время учета геозоны (в мин.)
              input(type="number" id="geofence-time" name="Время учета геозоны" placeholder='Some Text')

              label(for="geofence-radius") Радиус геозоны по умолчанию (в м.)
              input(type="number" id="geofence-radius" name="Радиус геозоны" placeholder='Some Text')

              label(for="drafts-approval") Согласование черновиков
              input(type="checkbox" id="drafts-approval" name='Согласование черновиков')

              label(for="geofence-stay") Корректировка периода нахождения в геозоне (в мин.)
              input(type="text" id="geofence-stay" name="Корректировка периода нахождения в геозоне" placeholder='Some Text')

              label(for="desired-output") Желаемая выработка одной машины (руб/км)
              input(type="number" id="desired-output" name="Желаемая выработка одной машины" placeholder='')



          .home-organization_right

            h3.home-organization_left_label Настройки труда и отдыха
            .home-organization_right__form-container
              label(for="cars-speed") Средняя скорость машин (км/ч)
              input(type="number" id="cars-speed" name="Средняя скорость машин" placeholder='Some Text')

              label(for="travel-hours") Кол-во часов для поездки в сутки
              input(type="number" id="travel-hours" name="Кол-во часов для поездки в сутки" placeholder='Some Text')

              label(for="scheduled-applications") Макс. кол-во запланированных заявок
              input(type="number" id="scheduled-applications" name="Кол-во часов для поездки в сутки" placeholder='Some Text')

              label(for="loading-time") Время загрузки/выгрузки (ч)
              input(type="text" id="loading-time" name="Время загрузки/выгрузки" placeholder='Some Text')

              label(for="day-start") Начало дня
              input(type="text" id="day-start" name="Начало дня" placeholder='Some Text' required)


            h3.home-organization_left_label Настройки заправок
            .home-organization_right__form-container
              label(for="fuel-consumption") Расход топлива, л/100км
              input(type="text" id="fuel-consumption" name="Расход топлива" placeholder='Some Text')

              label(for="fuel-minimum") Минимальное кол-во топлива в баке
              input(type="text" id="fuel-minimum" name="Расход топлива" placeholder='Some Text')


            h3.home-organization_left_label Время отправки ежедневного отчета
            .home-organization_right__form-container
              label(for="report-time") Время отчета
              input(type="text" id="report-time" name="Время отчета" placeholder='Some Text')

              label(for="report-time-to") Время отчета
              input(type="text" id="report-time-to" name="Время отчета" placeholder='Some Text')




        .home-settings#settings-page

           h3.home-settings__title Заявка транспортной организации
           .home-settings__thead
             span Название
             span Невидимое
             span Обязательное
           .home-settings__tbody
             .home-settings__tbody__line
               .home-settings__tbody__line_name Международная заявка
               .home-settings__tbody__line_td
                 input(type="radio" id="ent-invisible" name="q")
               .home-settings__tbody__td
                 input(type="radio" id="ent-mandatory" name="q")

             .home-settings__tbody__line
               .home-settings__tbody__line_name Порожняя заявка
               .home-settings__tbody__line_td
                  input(type="radio" id="porog-invisible" name="ent")
               .home-settings__tbody__line_td
                  input(type="radio" id="porog-mandatory" name="ent")

             .home-settings__tbody__line
               .home-settings__tbody__line_name Прицеп
               .home-settings__tbody__line_td
                  input(type="radio" id="trailer-invisible" name="w" disabled='')
               .home-settings__tbody__line_td
                  input(type="radio" id="trailer-mandatory" name="w" disabled='')

             .home-settings__tbody__line
               .home-settings__tbody__line_name Организация
               .home-settings__tbody__line_td
                  input(type="radio" id="org-invisible" name="r")
               .home-settings__tbody__line_td
                  input(type="radio" id="org-mandatory" name="r")

             .home-settings__tbody__line
               .home-settings__tbody__line_name Ответственный
               .home-settings__tbody__line_td
                 input(type="radio" id="res-invisible" name="s")
               .home-settings__tbody__line_td
                 input(type="radio" id="res-mandatory" name="s")


           h3.home-settings__title.home-settings__title_dop Точка заявки
           .home-settings__thead
             span Название
             span Невидимое
             span Обязательное
           .home-settings__tbody
             .home-settings__tbody__line
               .home-settings__tbody__line_name Международная заявка
               .home-settings__tbody__line_td
                 input(type="radio" id="en-invisible" name="i")
               .home-settings__tbody__td
                 input(type="radio" id="en-mandatory" name="i")


             .home-settings__tbody__line
               .home-settings__tbody__line_name Международная заявка
               .home-settings__tbody__line_td
                 input(type="radio" id="e-invisible" name="n")
               .home-settings__tbody__td
                 input(type="radio" id="e-mandatory" name="n")


             .home-settings__tbody__line
               .home-settings__tbody__line_name Международная заявка
               .home-settings__tbody__line_td
                 input(type="radio" id="en-invi" name="t")
               .home-settings__tbody__td
                 input(type="radio" id="en-manda" name="t")


             .home-settings__tbody__line
               .home-settings__tbody__line_name Международная заявка
               .home-settings__tbody__line_td
                 input(type="radio" id="en-i" name="e")
               .home-settings__tbody__td
                 input(type="radio" id="en-m" name="e")


             .home-settings__tbody__line
               .home-settings__tbody__line_name Международная заявка
               .home-settings__tbody__line_td
                 input(type="radio" id="en-e" name="en")
               .home-settings__tbody__td
                 input(type="radio" id="en-y" name="en")









        .home-organization_buttons
          button(type="submit").home-organization_buttons-save сохранить изменения
          button(type="reset").home-organization_buttons-cancel отменить



















