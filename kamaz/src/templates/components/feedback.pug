section.feedback
  .container
    if (mainForm)
      h2.feedback__title.section-title.slide-right Обратная связь
    else
      h2.feedback__title.section-title.section-title_sm.slide-right Остались вопросы?
    .feedback__content
      form.feedback__form
        .feedback__form-fields
          .feedback__form-grid
            .feedback__form-input
              input(type="text" name="name" required)
              span Ваше имя
            .feedback__form-input
              input(type="tel" name="tel" required)
              span Ваш телефон
            .feedback__form-input
              input(type="email" name="mail" required)
              span E-mail для связи
            .feedback__form-textarea.slide-up
              textarea(name="comment" placeholder="Комментарий")
          .feedback__form-bottom.slide-up
            button(type="submit").feedback__form-submit.btn.btn_sm Отправить
            .feedback__form-policy
              span Продолжая, вы принимаете нашу
              a(href="javascript:") Политику конфиденциальности
        .feedback__form-lottie
