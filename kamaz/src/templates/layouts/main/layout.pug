block variables
  include ../../abstracts/variables

//- mixins
include ../../mixins/header-menu
include ../../mixins/list
include ../../mixins/breadcrumbs
include ../../mixins/options-accord
include ../../mixins/characteristic-list
include ../../mixins/btn-more
include ../../mixins/contacts-item
include ../../mixins/list-without-anim

doctype html
html(lang="ru")
  head
    include head
  body
    <!-- Preloader -->
    include ../../components/preloader
    <!-- Mobile menu -->
    include ../../components/mobile-menu
    <!-- Contact form -->
    button.contact-form-btn
      | !{require('!svg-inline-loader?removeSVGTagAttrs=false!@/assets/img/contact-form/form-icon-sec.svg')}
    include ../../components/contact-form
    <!-- Header -->
    include header
    <!-- Content -->
    main.main(class=mainModifier ? `main_${mainModifier}`:'')
      block content
    <!-- Footer -->
    include footer
